<h1> Your Favorites </h1>
  <h4>Favorite Media:</h4>
  <br>

  <% @cart.image_collections.each do |collection| %>
  <!-- List all the media in the cart by the collection it belongs to   
  --><h5><%= collection.name %></h5>
    <% @cart.media.where(image_collection_id: collection.id ).each do |medium| %>
      <h5><%= link_to "Picture Embed Link" , medium_path(medium) %></h5>
      <p>Name: <%= medium.name %> Price: <%= medium.price %> Genre: <%= medium.genre %></p>
        <br>
    <% end %>

    <%= link_to "Edit your favorites" , edit_cart_path(@cart)  %>
  

  <% end %>
