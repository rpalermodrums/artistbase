<% if flash[:message] %>
  <%= flash[:message] %>
<% end %>

<h1>Login</h1>

<h3>Artist Login</h3>
<p><%= form_tag '/sessions' do %></p>
  <p><%= label_tag "Username" %></p>
  <p><%= text_field_tag 'artist[username]' %></p>
  <p><%= label_tag "Password" %></p>
  <p><%= password_field_tag 'password' %></p>
  <p><%= submit_tag 'login' %></p>
<% end %><br><br>

